{% extends "layout.twig" %}

{% set showMenu = true %}

{% block title %}Zitate aus Hanna's Chat{% endblock %}

{% block content %}
<section class="m-5">
    <div class="container">
        <div class="col">
            <img src="/static/images/zitate.png" class="d-block mx-auto" />
        </div>
    </div>
</section>
<section class="mb-5">
    <div class="container">
        <div class="col">
            <table class="table table-dark table-striped table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Zitat</th>
                    <th>Freigegeben</th>
                </tr>
                </thead>
                <tbody>
                {% for quote in quotes %}
                <tr>
                    <td>{{quote.id}}</td>
                    <td>{{quote.quote}}</td>
                    <td>
                        {% if quote.isApproved %}
                            Ja
                        {% else %}
                            Nein
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</section>
{% endblock %}