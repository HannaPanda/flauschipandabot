<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="http://www.hannapanda.de/static/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="http://www.hannapanda.de/static/css/hanna.css" rel="stylesheet" crossorigin="anonymous">

    <title>Zitate aus Hanna's Chat</title>
</head>
<body>
{{ include('menu.html') }}
<section class="m-5">
    <div class="container">
        <div class="col">
            <img src="/static/images/zitate.png" class="d-block mx-auto" />
        </div>
    </div>
</section>
<section class="mb-5">
    <div class="container">
        <div class="col">
            <table class="table table-dark table-striped table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Zitat</th>
                    <th>Freigegeben</th>
                </tr>
                </thead>
                <tbody>
                {% for quote in quotes %}
                <tr>
                    <td>{{quote.id}}</td>
                    <td>{{quote.quote}}</td>
                    <td>
                        {% if quote.isApproved %}
                            Ja
                        {% else %}
                            Nein
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</section>

<script src="http://www.hannapanda.de/static/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

</body>
</html>