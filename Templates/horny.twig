<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="http://www.hannapanda.de/static/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="http://www.hannapanda.de/static/css/hanna.css" rel="stylesheet" crossorigin="anonymous">

    <title>Horniness Level</title>
</head>
<body style="background: transparent">
<section class="m-5">
    <div class="container">
        <div class="col text-center">
            <p style="font-family: 'Luckiest Guy'; color: #FFA7F6; text-shadow: 4px 4px 8px #0e0e10; font-size: 6rem" id="horniness-level-wrapper" {% if hornyLevel == 0 %}class="d-none"{% endif %}>
                Horny Level: <span id="horniness-level">{{ hornyLevel }}</span>%
            </p>
        </div>
    </div>
</section>

<script src="http://www.hannapanda.de/static/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="/socket.io/socket.io.js"></script>
<!--<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.0.1/socket.io.min.js" type="text/javascript"></script>-->
<script>
    var socket = io();
    socket.on('hornyLevelChange', function(msg) {
        var element = document.getElementById('horniness-level');
        var wrapper = document.getElementById('horniness-level-wrapper');

        element.innerHTML = msg.newLevel;

        if(msg.newLevel >= 90) {
            wrapper.classList.add("blink_me");
        } else {
            wrapper.classList.remove("blink_me");
        }

        if(msg.newLevel <= 0) {
            wrapper.classList.add("d-none");
        } else {
            wrapper.classList.remove("d-none");
        }
    });
</script>

</body>
</html>