<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="http://www.hannapanda.de/static/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="http://www.hannapanda.de/static/css/hanna.css" rel="stylesheet" crossorigin="anonymous">

    <title>Overlay</title>
</head>
<body style="background: transparent">
<div id="root"></div>

<script src="http://www.hannapanda.de/static/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
<script src="/socket.io/socket.io.js"></script>
<!--<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.0.1/socket.io.min.js" type="text/javascript"></script>-->
<script>
    function playVideo(videoUrl, volume, fullscreen) {
        let video = document.createElement("video");

        //video.setAttribute("id", "VideoElement");
        video.setAttribute("src", videoUrl);
        //video.setAttribute("controls", "controls");
        video.setAttribute("preload", "auto");
        if(fullscreen) {
            video.setAttribute("class", "fullscreen");
        }
        video.volume = volume;
        video.autoplay = true;

        video.addEventListener('ended', function() {
            video.pause();
            video.removeAttribute('src');
            video.load();
            video.remove();
        });

        document.getElementById("root").appendChild(video);
    }

    function playAudio(audioUrl, volume) {
        let audio = document.createElement("audio");

        //video.setAttribute("id", "VideoElement");
        audio.setAttribute("src", audioUrl);
        //video.setAttribute("controls", "controls");
        audio.setAttribute("preload", "auto");
        audio.volume = volume;
        audio.autoplay = true;

        audio.addEventListener('ended', function() {
            audio.pause();
            audio.removeAttribute('src');
            audio.load();
            audio.remove();
        });

        document.getElementById("root").appendChild(audio);
    }

    function showImage(imageUrl) {
        let image = new Image();
        image.src = imageUrl;
        $(image).width('50%');
        $(image).hide();
        $('#root').append(image);

        $(image).fadeIn(500).delay(5000).fadeOut(500, () => {
            $(image).delete();
        });
    }

    var socket = io();
    socket.on('playVideo', function(msg) {
        playVideo('/static/video/'+msg.file, msg.volume, msg.fullscreen);
    });
    socket.on('playAudio', function(msg) {
        playVideo('/static/audio/'+msg.file, msg.volume);
    });
    socket.on('showImage', function(msg) {
        showImage('/static/images/'+msg.file);
    });
</script>

</body>
</html>